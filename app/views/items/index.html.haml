%h1 Listing items

%table
  %thead
    %tr
      %th(class="numfield") Numfield
      %th(class="textfield") Textfield
      %th(class="title")  Title
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td(class="numfield")= item.numfield
        %td(class="textfield")= item.textfield
        %td(class="title")= item.title
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
