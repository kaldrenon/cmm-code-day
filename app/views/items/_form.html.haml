= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :numfield
    = f.number_field :numfield
  .field
    = f.label :textfield
    = f.text_area :textfield
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
