%div(class="signup")
  = form_for(:user, url: { controller: 'users', action: 'create' }) do |f|
    %p Username:
    = f.text_field :username
    %p Email:
    = f.text_field :email
    %p Password:
    = f.password_field :password
    %p Password Confirmation:
    = f.password_field :password_confirmation
    = f.submit :Signup
