= form_for @task_step do |f|
  - if @task_step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task_step.errors.count, "error")} prohibited this task_step from being saved:"
      %ul
        - @task_step.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :task_id
    = f.number_field :task_id
  .field
    = f.label :started
    = f.datetime_select :started
  .field
    = f.label :stopped
    = f.datetime_select :stopped
  .actions
    = f.submit 'Save'
