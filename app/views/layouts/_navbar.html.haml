%div.navbar
  %span.nav-title CoverMyMeds Code Day
  = link_to 'Items', items_path, class: 'nav-link'
  = link_to 'Users', users_path, class: 'nav-link'
  - if logged_in?
    %p
      %span Hello
      %span=current_user.username
      = link_to 'log out', { controller: :sessions, action: :destroy }, { method: :delete, class: 'nav-link' }
  - else
    = link_to 'log in', '/login', class: 'nav-link'

