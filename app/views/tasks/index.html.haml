%h1 Listing tasks

%table
  %thead
    %tr
      %th Project
      %th Description
      %th Customer
      %th Project
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.project_id
        %td= task.description
        %td= task.customer_id
        %td= task.project_id
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
